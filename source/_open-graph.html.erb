<meta property="og:site_name" content="Hop! into the grain Festival 2018 | Craft Beer & Music Festival">
<% if current_page.url == "/" %>
  <meta property="og:title" content="Welkom bij Hop! into the Grain Craft Beer & Music Festival">
<% else %>
  <meta property="og:title" content="<%= current_page.data.title %>" | Hop! into the Grain Craft Beer & Music Festival">
<% end %>
<meta property="og:url" content="<%= full_url(current_page.url) %>">
<meta property="og:type" content="website">
<meta property="og:description" content="<%= h(meta_description) %>">
<meta property="og:image" content="<%= full_url(asset_url(current_page.data.image || "images/open-graph.png")) %>">
<meta property="og:locale" content="nl_NL">
